<body leftmargin="0" marginwidth="0" topmargin="0" marginheight="0" offset="0">
<center>
    <table border="0" cellpadding="0" cellspacing="0" height="100%" width="100%" id="backgroundTable">
        <tr>
            <td align="center" valign="top">
                <!-- // Begin Template Preheader \\ -->
                <table border="0" cellpadding="2" cellspacing="0" width="100%" id="templatePreheader">
                    <tr>
                        <td align="center" valign="top" class="preheaderContent">

                            <!-- // Begin Module: Standard Preheader \\ -->
                            <table border="0" cellpadding="5" cellspacing="0" width="600px">
                                <tr>
                                    <td valign="top">
                                        <div>
                                            {$email.subject}
                                        </div>
                                    </td>
                                    {if $email.settings.link}
                                    <td valign="top" width="200">
                                        <div>
                                            {$email.phrase.view_on}
                                            <br>
                                            <a href="{$email.link.browser}" target="_blank">{$email.phrase.browser}</a>.
                                        </div>
                                    </td>
                                    {/if}
                                </tr>
                            </table>
                            <!-- // End Module: Standard Preheader \\ -->

                        </td>
                    </tr>
                </table>
                <!-- // End Template Preheader \\ -->
                <table border="0" cellpadding="0" cellspacing="0" width="600" id="templateContainer">
                    <tr>
                        <td align="center" valign="top">
                            <!-- // Begin Template Header \\ -->
                            <table border="0" cellpadding="0" cellspacing="0" width="600" id="templateHeader">
                                <tr>
                                    <td class="headerContent">

                                        <table border="0" cellpadding="5" cellspacing="0" width="100%">
                                            <tr>
                                                <td align="center">
                                                    <img src="{$email.owner.logo}"  width="120" height="120" alt="{$email.owner.name}" title="" align="center">
                                                </td>
                                            </tr>
                                            <tr>
                                                <td align="center">
                                                    <img src="{$email.separator.img}" width="{$email.separator.width}" height="{$email.separator.height}" alt="" title="" align="center">
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <div>
                                                        <h2>{$email.header}</h2>
                                                        <h2></h2>
                                                    </div>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                            <!-- // End Template Header \\ -->
                        </td>
                    </tr>
                    <tr>
                        <td align="center" valign="top">
                            <!-- // Begin Template Body \\ -->
                            <table border="0" cellpadding="10" cellspacing="0" width="600" id="templateBody">
                                <tr>
                                    <td valign="top" class="bodyContent">
                                        <!-- // Begin Module: Standard Content \\ -->
                                        <table border="0" cellpadding="10" cellspacing="0" width="100%">
                                            <tr>
                                                <td valign="top">
                                                    <div>
                                                        {$email.content}
                                                    </div>
                                                </td>
                                            </tr>
                                        </table>
                                        <!-- // End Module: Standard Content \\ -->
                                    </td>
                                </tr>
                            </table>
                            <!-- // End Template Body \\ -->
                        </td>
                    </tr>
                    <tr>
                        <td align="center" valign="top">
                            <!-- // Begin Template Footer \\ -->
                            <table border="0" cellpadding="10" cellspacing="0" width="600" id="templateFooter">
                                <tr>
                                    <td valign="top" class="footerContent">
                                        <!-- // Begin Module: Standard Footer \\ -->
                                        <table border="0" cellpadding="10" cellspacing="0" width="100%">
                                            <tr>
                                                <td valign="top" width="370">
                                                    <div>
                                                        {if $email.settings.copyright}
                                                        <em>{$email.copyright}</em>
                                                        <br>
                                                        {/if}
                                                        {if $email.settings.info}
                                                        <br>
                                                        <strong>{$email.phrase.our_contact_info}</strong>
                                                        <br>
                                                        {foreach $email.contact.info as $info}
                                                            {$info.type} {$info.value}
                                                            <br>
                                                        {/foreach}
                                                        {/if}
                                                    </div>
                                                    <br>
                                                </td>
                                                {if $email.settings.social}
                                                <td align="right" valign="top" width="111" id="social">
                                                    <div>
                                                        {foreach $email.social as $network}
                                                        <a class="{$network->getUrlKey()}" href="{$network->getUrl()}">
                                                            <img align="left" alt="{$network->getName()}" height="32" src="{$email.link.theme}img/footer-{$network->getUrlKey()}.png" title="" width="32">
                                                        </a>
                                                        {/foreach}
                                                    </div>
                                                </td>
                                                {/if}
                                            </tr>
                                            <tr>
                                                <td colspan="2" valign="middle" id="utility">
                                                    {if $email.settings.unsubscribe}
